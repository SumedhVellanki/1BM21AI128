#include <iostream>

class SelectionSort {
private:
    int* arr;
    int size;

public:
    SelectionSort(int arr[], int n) {
        size = n;
        this->arr = new int[size];
        for (int i = 0; i < size; ++i) {
            this->arr[i] = arr[i];
        }
    }
    void sort() {
        for (int i = 0; i < size - 1; ++i) {
            int min_idx = i;
            for (int j = i + 1; j < size; ++j) {
                if (arr[j] < arr[min_idx]) {
                    min_idx = j;
                }
            }
            std::swap(arr[i], arr[min_idx]);
        }
    }
    void display() {
        std::cout << "Sorted array: ";
        for (int i = 0; i < size; ++i) {
            std::cout << arr[i] << " ";
        }
        std::cout << std::endl;
    }
    ~SelectionSort() {
        delete[] arr;
    }
};

int main() {
    int n;
    std::cout << "Enter the number of elements: ";
    std::cin >> n;
    int arr[n];
    std::cout << "Enter the elements: ";
    for (int i = 0; i < n; ++i) {
        std::cin >> arr[i];
    }
    SelectionSort sorter(arr, n);
    sorter.sort();
    sorter.display();
    return 0;
}
